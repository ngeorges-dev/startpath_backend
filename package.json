{
  "name": "startpath_backend",
  "version": "1.0.0",
  "description": "StartPath is a job platform designed to help junior professionals find their first job opportunities. It connects entry-level candidates with recruiters, providing a seamless experience for both sides.",
  "main": "src/index.ts",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node index.js",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:seed": "tsx src/dev/seed.ts",
    "db:migrate": "drizzle-kit migrate"
  },
  "packageManager": "pnpm@10.6.5",
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.1",
    "fastify": "^5.2.1",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
